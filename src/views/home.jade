                    li
                        a(href="" target)
                            img(src="/img/twitter_icon.png", alt="Twitter Icon")
                    li
                        a(href="" target)
                            img(src="/img/fb_icon.png", alt="Fb Icon")
                    li
                        a(href="" target)
                            img(src="/img/youtube_icon.png", alt="Youtube Icon")