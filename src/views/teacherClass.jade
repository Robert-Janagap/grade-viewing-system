<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        title Algebra
    body
        header
            .container.header_inner.sub_pages_header
                ul(ng-controller = "navCtrl")
                    li
                        a(href="#/teacher/") Classes
                    li
                        a(href="#/teacher/notifications").notification Notifications
                            span.notification_counter 32
                    li
                        toggle-modal 
                            a(href="") Create Class
                    li
                        a(href="" ng-click="logOut()") Log-out
        .overlay
            .create_class
                toggle-modal.close_btn X
                .row
                    label(for="") Class Name
                    input(type="text" placeholder = "Ex. algebra 2-a")
                .row.criteria
                    label(for="").criteria_title Criteria
                    .row
                        label(for="") Prelim
                        input(type="number" max=50 min=20)
                    .row
                        label(for="") Midterm
                        input(type="number" max=50 min=20)
                    .row
                        label(for="") Final
                        input(type="number" max=50 min=20)
                .btn.btn_full.btn_blue Create Class
        .container
            .teacher_class
                h3.teacher_class_title Science ( Class Code )
                table
                    thead
                        tr.no-border
                            th Students
                            th Prelim
                                span  ( 30% )
                            th Midterm
                                span  ( 30% )
                            th Final
                                span  ( 30% )
                            th Average
                    tbody
                        tr
                            td 1. Juan De la Cruz Santillan Magbanua
                            td 
                                input(type="text" value=0)
                            td 
                                input(type="text" value=10)
                            td 
                                input(type="text" value=10)
                            td 
                                span 90%
                        tr
                            td 2. Juan De la Cruz
                            td 
                                input(type="text" value=0)
                            td 
                                input(type="text" value=10)
                            td 
                                input(type="text" value=10)
                            td 
                                span 90%